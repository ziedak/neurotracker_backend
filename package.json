{
  "name": "backend-monorepo",
  "private": true,
  "workspaces": ["libs/*", "apps/*"],
  "scripts": {
    "build": "tsc -b",
    "build:watch": "tsc -b -w",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "dev": "pnpm run dev:all",
    "dev:all": "concurrently \"pnpm --filter api-gateway dev\" \"pnpm --filter ingestion dev\" \"pnpm --filter prediction dev\"",
    "dev:api": "pnpm --filter api-gateway dev",
    "dev:ingestion": "pnpm --filter ingestion dev",
    "dev:prediction": "pnpm --filter prediction dev"
  },
  "devDependencies": {
    "typescript": "^5.1.6",
    "jest": "^29.5.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "concurrently": "^8.2.2"
  }
}
