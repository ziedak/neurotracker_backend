{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@libs/database": ["../database/src"],
      "@libs/monitoring": ["../monitoring/src"],
      "@libs/utils": ["../utils/src"],
      "@libs/rbac": ["../rbac/src"]
